{
  "version": 2,
  "builds": [
    {
      "src": "main.go",
      "use": "@vercel/go",
      "config": {
        "includeFiles": [
          "templates/**",
          "static/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.go"
    }
  ],
  "env": {
    "GO_BUILD_FLAGS": "-ldflags '-s -w'",
    "APP_ENV": "production"
  },
  "regions": ["all"],
  "functions": {
    "api/**/*.go": {
      "memory": 3008,
      "maxDuration": 30
    }
  }
}
